@model IEnumerable<MiBotica.SolPedido.Entidades.Core.Usuario>

@{
    ViewBag.Title = "Lista de Usuarios";
}

<div class="container mt-4 animate__animated animate__fadeIn">
    <div class="card shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center bg-light">
            <h3 class="card-title mb-0">Lista de Usuarios</h3>
            <div class="input-group input-group-sm" style="width: 300px;">
                <input type="text" name="table_search" class="form-control" placeholder="Buscar...">
                <div class="input-group-append">
                    <button type="submit" class="btn btn-outline-secondary">
                        <i class="fa fa-search"></i>
                    </button>
                    <a href="@Url.Action("Create", "Usuario")" class="btn btn-outline-success ml-2">
                        <i class="fa fa-plus"></i> Nuevo Usuario
                    </a>
                </div>
            </div>
        </div>

        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="thead-light">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.IdUsuario)</th>
                        <th>@Html.DisplayNameFor(model => model.CodUsuario)</th>
                        <th>@Html.DisplayNameFor(model => model.Nombres)</th>
                        <th class="text-right">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.IdUsuario)</td>
                        <td>@Html.DisplayFor(modelItem => item.CodUsuario)</td>
                        <td>@Html.DisplayFor(modelItem => item.Nombres)</td>
                        <td class="text-right">
                            <a href="@Url.Action("Edit", new { id = item.IdUsuario })" class="btn btn-warning btn-sm">
                                <i class="fa fa-edit"></i> Editar
                            </a>
                            <a href="@Url.Action("Details", new { id = item.IdUsuario })" class="btn btn-info btn-sm">
                                <i class="fa fa-eye"></i> Detalles
                            </a>
                            <a href="@Url.Action("Delete", new { id = item.IdUsuario })" class="btn btn-danger btn-sm">
                                <i class="fa fa-trash"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
}
