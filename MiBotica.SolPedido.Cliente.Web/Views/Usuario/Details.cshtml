@model MiBotica.SolPedido.Entidades.Core.Usuario

@{
    ViewBag.Title = "Detalles del Usuario";
}

<div class="container mt-4 animate__animated animate__fadeIn">
    <h2>Detalles del Usuario</h2>

    <div class="card shadow-lg p-4 animate__animated animate__fadeIn">
        <h4 class="card-title">Información del Usuario</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IdUsuario)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IdUsuario)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CodUsuario)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CodUsuario)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nombres)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nombres)
            </dd>
        </dl>

        <div>
            <a href="@Url.Action("Index", "Usuario")" class="btn btn-secondary ml-2" style="color: #605ca8;">Volver a la lista</a>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
}
