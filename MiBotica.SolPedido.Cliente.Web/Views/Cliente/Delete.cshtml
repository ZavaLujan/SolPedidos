@model MiBotica.SolPedido.Entidades.Core.Cliente

@{
    ViewBag.Title = "Eliminar Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4 animate__animated animate__fadeIn">
    <h2>Eliminar Cliente</h2>

    <h3>¿Estás seguro de que quieres eliminar este cliente?</h3>
    <div>
        <h4>Detalles del Cliente</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Codigo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Codigo)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.NombreCompleto)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NombreCompleto)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Zona)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Zona)
            </dd>
        </dl>

        @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions">
            <input type="submit" value="Eliminar" class="btn btn-danger" style="background-color: #dc3545; color: #fff;" />
            <a href="@Url.Action("Index", "Cliente")" class="btn btn-secondary" style="margin-left: 10px;">Volver a la Lista</a>
        </div>
        }
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
}
