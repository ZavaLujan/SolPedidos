@model MiBotica.SolPedido.Entidades.Core.Cliente

@{
    ViewBag.Title = "Detalles del Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4 animate__animated animate__fadeIn">
    <h2>Detalles del Cliente</h2>

    <div>
        <h4>Información del Cliente</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Codigo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Codigo)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.NombreCompleto)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NombreCompleto)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Zona)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Zona)
            </dd>
        </dl>
    </div>

    <p>
        <a href="@Url.Action("Index", "Cliente")" class="btn btn-secondary" style="margin-top: 10px;">Volver a la Lista</a>
    </p>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
}
